{
  "version": 2,
  "buildCommand": [{ "src": "package.json", "use": "@vercel/static-build" }],
  "builds": [
    { "src": "api/server.js", "use": "@vercel/node" },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/server.js" },
    { "src": "/.*", "dest": "build/index.html" }
  ]
}
